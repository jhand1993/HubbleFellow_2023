@article{Hachinger09,
	title        = {{Spectral analysis of the 91bg-like Type Ia SN 2005bl: low luminosity, low velocities, incomplete burning}},
	author       = {Hachinger, Stephan and  Mazzali,  Paolo A. and   Taubenberger, Stefan and   Pakmor, R\"{u}diger and  Hillebrandt, Wolfgang},
