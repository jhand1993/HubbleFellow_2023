@article{Gonzalez-Gaitan14,
	title        = {Defining Photometric Peculiar Type Ia Supernovae},
	author       = {S. Gonz\'{a}lez-Gait\'{a}n and E. Y. Hsiao and G. Pignata and F. F\"{o}rster and C. P. Guti\'{e}rrez and F. Bufano and L. Galbany and G. Folatelli and M. M. Phillips and M. Hamuy and J. P. Anderson and T. de Jaeger},
	year         = 2014,
